{
    "version": 2,
    "builds": [
      {
        "src": "src/index.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "2048mb",
          "NODE_ENV": "production"
        },
        "functions": [
          {
            "includeFiles": "src/**/*.ts",
            "function": "api/index.handler"
          }
        ]
      }
    ],
    "functions": {
      "api/index.ts": {
        "includeFiles": "src/**/*.ts",
        "runtime": "@vercel/node",
        "maxDuration": 30
      }
    }
  }
  