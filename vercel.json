{
    "version": 2,
    "builds": [
      {
        "src": "src/server.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "2048mb",
          "NODE_ENV": "production"
        },
        "functions": [
          {
            "includeFiles": "src/**/*.ts",
            "function": "api/index.handler"
          }
        ]
      }
    ]
  }
  